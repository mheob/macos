{
  // Programming Languages
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[env]": {
    "editor.defaultFormatter": "IronGeek.vscode-env"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[git-commit]": {
    "editor.rulers": [72, 80]
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[go.mod]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    }
  },
  "[handlebars]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "emmet.includeLanguages": { "velocity": "html" },
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "javascript.preferences.importModuleSpecifier": "shortest",
  "javascript.preferences.importModuleSpecifierEnding": "minimal",
  "javascript.preferences.quoteStyle": "single",
  "javascript.preferences.useAliasesForRenames": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "path-intellisense.extensionOnImport": false,

  // Editor
  "breadcrumbs.filePath": "off",
  "chat.editor.fontFamily": "'Geist Mono', 'Monaspace Argon', 'Cascadia Code', 'VictorMono Nerd Font', 'Fira Code iScript', 'FiraCode Nerd Font Mono', 'Operator Mono Lig', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "debug.console.fontFamily": "'Geist Mono', 'Monaspace Argon', 'Cascadia Code', 'VictorMono Nerd Font', 'Fira Code iScript', 'FiraCode Nerd Font Mono', 'Operator Mono Lig', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.codeLensFontFamily": "'Geist Mono', 'Monaspace Argon', 'Cascadia Code', 'VictorMono Nerd Font', 'Fira Code iScript', 'FiraCode Nerd Font Mono', 'Operator Mono Lig', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",
  "editor.fontFamily": "'Geist Mono', 'Monaspace Argon', 'Cascadia Code', 'VictorMono Nerd Font', 'Fira Code iScript', 'FiraCode Nerd Font Mono', 'Operator Mono Lig', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  // "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.inlayHints.fontFamily": "'Geist Mono', 'Monaspace Argon', 'Cascadia Code', 'VictorMono Nerd Font', 'Fira Code iScript', 'FiraCode Nerd Font Mono', 'Operator Mono Lig', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.lineHeight": 0,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 100,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.occurrencesHighlight": "multiFile",
  "editor.padding.top": 10,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [100],
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.semanticHighlighting.enabled": true,
  "editor.stickyScroll.enabled": true,
  "editor.suggest.insertMode": "insert",
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.useTabStops": true,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js, ${capture}.*.js, ${capture}.*.ts, ${capture}.*.tsx",
    "*.ts": "${capture}.js, ${capture}.*.jsx, ${capture}.*.tsx",
    "*.tsx": "${capture}.ts, ${capture}.*.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, pnpm-lock.yaml, pnpm-workspace.yaml, yarn.lock",
    "*": "${basename}.*.${extname}"
  },
  "explorer.incrementalNaming": "smart",
  "explorer.openEditors.visible": 1,
  "files.associations": {
    "*.__tmpl__": "handlebars",
    "*.env": "env",
    "*.env.*": "env",
    "*.mdx": "mdx"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.cspell.json": true,
    "**/.editorconfig": true,
    "**/.env*": true,
    "**/.git": true,
    "**/.github": true,
    "**/.gitignore": true,
    "**/.husky": true,
    "**/.next": true,
    "**/.npmrc": true,
    "**/.nvmrc": true,
    "**/.sanity": true,
    "**/.todo": true,
    "**/.turbo": true,
    "**/.vercel": true,
    "**/.vscode": true,
    "**/bun.lockb": true,
    "**/commitlint.config.*": true,
    "**/eslint.config.*": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/pnpm-workspace.yaml": true,
    "**/next.config.*": true,
    "**/next-env.d.ts": true,
    "**/postcss.config.*": true,
    "**/prettier.config.*": true,
    "**/README.md": true,
    "**/sonar-project.properties": true,
    "**/tailwind.config.*": true,
    "**/tsconfig.json": true,
    "**/turbo.json": true,
    "**/vite-env.d.ts": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {},
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "markdown.preview.fontFamily": "'Geist Mono', 'Monaspace Argon', 'Cascadia Code', 'VictorMono Nerd Font', 'Fira Code iScript', 'FiraCode Nerd Font Mono', 'Operator Mono Lig', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "markdown.preview.fontSize": 15,
  "notebook.output.fontFamily": "'Geist Mono', 'Monaspace Argon', 'Cascadia Code', 'VictorMono Nerd Font', 'Fira Code iScript', 'FiraCode Nerd Font Mono', 'Operator Mono Lig', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "scm.inputFontFamily": "'Geist Mono', 'Monaspace Argon', 'Cascadia Code', 'VictorMono Nerd Font', 'Fira Code iScript', 'FiraCode Nerd Font Mono', 'Operator Mono Lig', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1",
    "Q_NEW_SESSION": "1"
  },
  "terminal.integrated.fontFamily": "'GeistMono Nerd Font', 'Hack Nerd Font Mono', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    }
  },
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "left",
  "window.commandCenter": false,
  "window.confirmBeforeClose": "always",
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0.75,
  "workbench.colorTheme": "Aura Dark",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.editor.revealIfOpen": false,
  "workbench.iconTheme": "moxer-icons",
  "workbench.layoutControl.enabled": true,
  "workbench.productIconTheme": "material-product-icons",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 16,

  // Theming
  "editor.tokenColorCustomizations": {
    "[Night Wolf (black)]": {
      "textMateRules": [
        {
          "name": "Comment",
          "scope": [
            "comment",
            "comment.block.documentation punctuation.definition.bracket.curly"
          ],
          "settings": {
            "foreground": "#919497",
            "fontStyle": "italic"
          }
        },
        {
          "name": "Double-Slashed Comment",
          "scope": [
            "comment.line.double-slash",
            "punctuation.definition.comment",
            "punctuation.whitespace.comment",
            "string.comment.buffered.block.pug"
          ],
          "settings": {
            "foreground": "#919497"
          }
        },
        {
          "name": "Data Type in commented documentation",
          "scope": [
            "comment.block.documentation entity.name.type.instance.jsdoc",
            "comment.block.documentation entity.name.type.instance.phpdoc"
          ],
          "settings": {
            "foreground": "#9696ffca"
          }
        },
        {
          "name": "Variables in commented documentation",
          "scope": [
            "comment.block.documentation variable.other.jsdoc",
            "comment.block.documentation variable.other.phpdoc"
          ],
          "settings": {
            "foreground": "#FFDC96ca"
          }
        },
        {
          "name": "@tags in commented documentation",
          "scope": [
            "comment.block.documentation storage.type.class.jsdoc",
            "comment.block.documentation punctuation.definition.block.tag.jsdoc"
          ],
          "settings": {
            "foreground": "#00b3ffca"
          }
        }
      ]
    }
  },
  "workbench.colorCustomizations": {
    "[Aura Dark]": {
      "editor.background": "#110f17",
      "terminal.background": "#110f17",
      "activityBar.background": "#110f17",
      "statusBar.background": "#110f17",
      "editorGroupHeader.tabsBackground": "#110f17",
      "tab.inactiveBackground": "#110f17"
    },
    "[Houston]": {
      "editor.selectionBackground": "#b58bc464",
      "editor.selectionHighlightBackground": "#b1d0ee26",
      "editor.selectionHighlightBorder": "#708499"
    }
  },

  // Extensions
  "advancedNewFile.exclude": {
    "**/.yarn/**": true,
    "**/node_modules/**": true,
    "**/vendor/**": true
  },
  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": true,
    "size": 32
  },
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 12,
      "y": 10
    }
  },
  "apc.font.family": "Geist Mono",
  "apc.monospace.font.family": "Geist Mono",
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 28,
    "fontSize": 12
  },
  "better-comments.tags": [
    { "tag": "!", "color": "#ff2d00" },
    { "tag": "?", "color": "#3498db" },
    { "tag": "i:", "color": "#15a2b8" },
    { "tag": "//", "color": "#474747", "strikethrough": true },
    { "tag": "fixme", "color": "#ff4d00" },
    { "tag": "todo", "color": "#ff8c00" },
    { "tag": "discuss", "color": "#add8e6" }
  ],
  "cody.commandCodeLenses": true,
  "console-ninja.output.showLogsFromLogPointsOnly": true,
  "console-ninja.output.showLogsFromMultipleRunningToolsTogether": true,
  "console-ninja.toolsToEnableSupportAutomaticallyFor": {
    "live-server-extension": true,
    "live-preview-extension": true
  },
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": false
  },
  "githubPullRequests.pullBranch": "never",
  "go.toolsManagement.autoUpdate": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "markdown.extension.toc.levels": "2..2",
  // "markdown.preview.fontSize": 18,
  "markdown.preview.typographer": true,
  "markdown-preview-enhanced.codeBlockTheme": "one-dark.css",
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "markdownlint.config": {
    "default": true,
    "MD010": { "code_blocks": false }
  },
  "pieces.setCopilotLocation": true,
  "prettier.documentSelectors": ["**/*.astro"],
  "projectManager.git.baseFolders": ["~/dev/customer", "~/dev"],
  "projectManager.git.maxDepthRecursion": 2,
  "projectManager.groupList": true,
  "redhat.telemetry.enabled": false,
  "sortJSON.excludedFiles": ["package.json", "**/package.json"],
  "svelte.enable-ts-plugin": true,
  "svg.preview.mode": "svg",
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.github/**"
  ],
  "todo-tree.general.tags": [
    "BUG",
    "DISCUSS",
    "FIXIT",
    "FIXME",
    "TODO",
    "VOTE",
    "[ ]",
    "[x]"
  ],
  "todo-tree.general.tagGroups": {
    "BUG": ["BUG", "FIXIT", "FIXME"]
  },
  "todo-tree.highlights.defaultHighlight": {
    "icon": "check",
    "type": "none"
  },
  "todo-tree.highlights.customHighlight": {
    "BUG": { "icon": "bug", "iconColour": "#aa0000" },
    "DISCUSS": { "icon": "organization", "iconColour": "#add8e6" },
    "TODO": { "icon": "tasklist", "iconColour": "#ffa500" }
  },
  "vsicons.dontShowNewVersionMessage": true,
  "wallaby.codeLensFeature.runTest": true,
  "wallaby.startAutomatically": false,
  "cSpell.dictionaries": ["custom-words"],
  "cSpell.dictionaryDefinitions": [
    {
      "name": "custom-words",
      "path": "~/dictionaries/vscode-cspell.txt",
      "addWords": true
    }
  ],
  "cSpell.language": "en,de,lorem",
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/.yarn/**",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    "**/vendor**"
  ],
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.editor.enableAutoCompletions": true,
  "security.promptForLocalFileProtocolHandling": false,
  "sakai-icons.hidesExplorerArrows": false
}
